  <PropertyGroup>
    <TargetFrameworks>net6.0;net4.8.1</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Version>1.0.0.2</Version>
    <FileVersion>1.0.0.2</FileVersion>
    <AssemblyVersion>1.0.0.2</AssemblyVersion>
    <ProductName>TimerFactory</ProductName>
    <PackageId>TimerFactory2025</PackageId>
    <PackageDescription>A factory for creating and managing timers.</PackageDescription>
    <Title>TimerFactory</Title>
    <Authors>The Guild</Authors>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
